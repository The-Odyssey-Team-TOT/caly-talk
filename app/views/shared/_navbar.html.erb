<style>
    .content {
        text-align: center;
        z-index: 10;
    }

    .header {
        position: relative;
        z-index: 20;
        background-color: #41474950; /* Lighter background color */
        color: white; /* Text color */
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;

        -webkit-user-select: none; /* Safari */
        -ms-user-select: none; /* IE 10 and IE 11 */
        user-select: none; /* Standard syntax */
    }

    .header nav {
        display: flex;
        align-items: center;
    }

    .header nav a {
        color: white; /* Link color */
        margin-left: 1rem;
        text-decoration: none;
    }

    .header nav a:hover {
        color: #cbd5e0; /* Lighter color on hover */
    }

    .profile-picture {
        position: relative;
        display: flex;
        align-items: center;
    }

    .profile-picture img {
        margin-top: 0.5rem;
        border-radius: 50%;
        cursor: pointer;
    }

    .profile-menu {
        display: none;
        position: absolute;
        top: 60px;
        right: 0;
        background-color: #2d3748;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 200px;
        text-align: left;
        z-index: 30;
    }

    .profile-menu a {
        display: block;
        padding: 0.5rem 1rem;
        color: white;
        text-decoration: none;
    }

    .profile-menu a:hover {
        background-color: #4a5568;
    }

    .profile-picture:hover .profile-menu {
        display: block;
    }

    .profile-menu h1 {
        padding: 0.5rem 1rem;
        color: white;
        font-size: 1rem;
        margin: 0;
    }
</style>
<header class="header">
    <div class="container mx-auto flex items-center justify-between" style="max-height: 2rem;">
        <h1 class="text-xl font-bold">Calypso</h1>
        <nav class="flex items-end">
            <a href="home">Home</a>
            <a href="chatroom">Chatroom</a>
        </nav>
        <div class="profile-picture">
            <img src="./assets/defaultPicture.png" alt="Default Profile Picture" width="50" height="50">
            <div class="profile-menu">
                <h1>Connected As: <%= current_user.email %></h1>
                <%= link_to "Profile", ""%>
                <a href="profile.html">Profile</a>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}%>
                <a href="settings.html">Settings</a>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}%>
            </div>
        </div>
    </div>
</header>
